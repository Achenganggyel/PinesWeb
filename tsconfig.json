{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl":".",
    "paths":{
      "@/*":["src/*"]
    }
  },
  "include": ["src/**/*.ts",
   "src/**/*.d.ts","src/**/*.vue", 
   "src/utils/pageR.js", 
   "src/views/uploadPicCom/Comm.ts",
   "src/types/*.d.ts"
, "src/server/index.js"  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
